# Consequence AI - Environment Variables Template
# Copy this file to .env and fill in your values

# ===== DATABASE =====
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
# Railway auto-provides this as DATABASE_URL
DATABASE_URL=postgresql://localhost/consequence_ai

# Database pool settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Enable SQL query logging (development only)
SQL_ECHO=false

# Enable database debug logging
DB_DEBUG=false

# ===== API =====
# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# API rate limiting (requests per minute)
RATE_LIMIT=60

# ===== EXTERNAL SERVICES =====
# SEC EDGAR API (optional, uses public API by default)
SEC_USER_AGENT=YourCompany your@email.com

# Alpha Vantage API key (for earnings calendar)
# Get free key at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=

# ===== DEPLOYMENT =====
# Railway environment (auto-set by Railway)
RAILWAY_ENVIRONMENT=

# Port (auto-set by Railway)
PORT=8000

# ===== DEVELOPMENT =====
# Enable debug mode
DEBUG=true

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
